<h1>Add new event</h1>

<%= form_for(@event) do |f| %>
	<p>
		<%= f.label :name%>:
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %>:
		<%= f.text_area :description, cols:40, rows:7%>
	</p>

	<p>
		<%= f.label :location %>:
		<%= f.text_field :location%>
	</p>

	<p>
		<%= f.label :price %>:
		<%= f.number_field :price, cols:40, rows:7%>
	</p>

	<p>
		<%= f.label :starts_at %>:
		<%= f.datetime_select :starts_at%>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>	